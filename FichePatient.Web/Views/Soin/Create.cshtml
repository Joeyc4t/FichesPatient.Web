@model FichePatient.Web.Models.SoinModel

@{
    ViewBag.Title = "Nouveau soin";
}

<script src="https://unpkg.com/gijgo@1.9.11/js/gijgo.min.js" type="text/javascript"></script>
<link href="https://unpkg.com/gijgo@1.9.11/css/gijgo.min.css" rel="stylesheet" type="text/css" />

<h2>Nouveau soin</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.PATIENT_ID)

        <div class="form-group">
            @Html.LabelFor(model => model.DATE, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DATE, new { htmlAttributes = new { @class = "form-control", id = "datepicker", width = "280", style = "text-align:center;" } })
                <script>
                    $('#datepicker').datepicker({
                        format: 'dd/mm/yyyy',
                        todayHighlight: true,
                        autoclose: true,
                        clearBtn: true
                    });
                </script>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TRAITEMENT, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.TRAITEMENT, new { @id = "traitementEditor" })
                <script>
                    ClassicEditor
                        .create(document.querySelector('#traitementEditor'))
                        .then(editor => {
                            console.log(editor);
                        })
                        .catch(error => {
                            console.error(error);
                        });
                </script>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PANSEMENTS, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.PANSEMENTS, new { @id = "pansementsEditor" })
                <script>
                    ClassicEditor
                        .create(document.querySelector('#pansementsEditor'))
                        .then(editor => {
                            console.log(editor);
                        })
                        .catch(error => {
                            console.error(error);
                        });
                </script>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CONSEILS, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(m => m.CONSEILS, new { @id = "conseilsEditor" })
                <script>
                    ClassicEditor
                        .create(document.querySelector('#conseilsEditor'))
                        .then(editor => {
                            console.log(editor);
                        })
                        .catch(error => {
                            console.error(error);
                        });
                </script>
            </div>
        </div>

        <div class="form-group">
            @Html.HiddenFor(m => m.PATIENT_ID)
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Retour", "Details", "Patient", new { @id = Model.PATIENT_ID }, new { @class="btn btn-default"})
                <input type="submit" value="Ajouter" class="btn btn-default pull-right" />
            </div>
        </div>
    </div>

}